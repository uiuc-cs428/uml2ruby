            adaptable="true"
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.uml"
            id="acceleo.ui.popupMenus.contribution.IFile">
         <menu id="org.eclipse.acceleo.module.menu" label="Acceleo Model to Text" path="additionsAcceleo">
               <groupMarker name="acceleo"/> 
         </menu>
         <action
               class="acceleo.ui.popupMenus.AcceleoGenerateUML2RubyAction"
               enablesFor="+"
               id="acceleo.ui.popupMenus.acceleoGenerateUML2RubyAction"
               icon="icons/default.gif"
               label="Generate UML2Ruby"
               menubarPath="org.eclipse.acceleo.module.menu/acceleo"/>
      </objectContribution>
   </extension>
</plugin>
